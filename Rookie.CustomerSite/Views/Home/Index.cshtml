@{
    ViewData["Title"] = "Home Page";
}
@using RookieShop.Shared.ViewModels
@model HomeVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

    
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <a asp-page="" asp-route-sortOrder="id">
                            @Html.DisplayNameFor(model => model.Categories.FirstOrDefault().Id)
                        </a>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categories.FirstOrDefault().CategoryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categories.FirstOrDefault().Description)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Categories)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a asp-page="" asp-route-id="@item.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <section class="main-content">

        <div class="row">
            <div class="span12">
                <ul class="thumbnails listing-products">
                    @foreach (var item in Model.Products)
                    {
                        <li class="span3">
                            <div class="product-box">

                                <span class="sale_tag"></span>
                                <a asp-controller="ProductDetail" asp-action="Index" asp-route-id=@item.Id><img alt="" src="~/images/ladies/1.jpg"></a><br />
                                <a asp-controller="ProductDetail" asp-action="Index" asp-route-id=@item.Id class="title">@item.ProductName</a><br />
                                <a href="#" class="category">@item.CategoryName</a>
                                <p class="price">$@item.Price</p>
                            </div>
                        </li>
                    }
                    </ul>
                </div>
            </div>
        </section>


